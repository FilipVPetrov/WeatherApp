<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.commons.form"
		controllerName="initialopenui.controller.WeatherUI" xmlns:html="http://www.w3.org/1999/xhtml"
	  displayBlock="true">
	  <Page title="Login Screen">
		<customHeader>
			<Bar>
				<contentMiddle><Lable text="Weather Application"/></contentMiddle>
				<contextMiddle><Lable text="@WeatherApp"/></contextMiddle>
			</Bar>
		</customHeader>	
		
		<content>
			<form:SimpleForm width="50%" maxContainerCols="3" layout="ResponsiveLayout">
				
				<form:title><core:Title></core:Title></form:title>
				
				<form:content>
				<Lable text="Username:"/>
				<Input id="J_username" type="Text" placeholder="Username" width="50%"></Input>
				
				<Lable text="Password:"/>
				<Input id="J_password" type="Password" placeholder="Password" width="50%"></Input>
				
				<Lable text=""/>
				<Button id="login_button" text="Login" width="50%"></Button>
				
				<form:title><core:Title></core:Title></form:title>
				
				</form:content>
			</form:SimpleForm>
		</content>
		
	  </Page>
</mvc:View>